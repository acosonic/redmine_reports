<%= stylesheet_link_tag "bootstrap.min.css", plugin: :redmine_twitter_bootstrap %>
<%= stylesheet_link_tag "bootstrap-responsive.min.css", plugin: :redmine_twitter_bootstrap %>
<%= javascript_heads %>
<%= javascript_include_tag "bootstrap.min.js", plugin: :redmine_twitter_bootstrap %>
<div class="row">
  <div class="span10">
    <div class="download">
    <%= link_to  current_url(:format => :csv) do %>
      <i class="icon-download"></i>csv download
    <% end %>
    </div>
    <% if @results.present? %>
      <table class="table table-bordered">
        <thead>
          <% @results[0].each do |key ,value| %>
            <th>
              <%= key %>
            </th>
          <% end %>
        </thead>
        <tbody>
          <% @results.each do |result| %>
            <tr>
              <% result.each do |key, value| %>
                <td>
                  <%= value %>
                </td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% end %>
  </div>
  <div class="span2"></div>
</div>
