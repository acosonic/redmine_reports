    <% if @results.present? %>
      <table class="table table-bordered">
        <thead>
          <% @results[0].each do |key ,value| %>
            <th>
              <%= key %>
            </th>
          <% end %>
        </thead>
        <tbody>
          <% @results.each do |result| %>
            <tr>
              <% result.each do |key, value| %>
                <td>
                  <%= value %>
                </td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% end %>
  </div>
  <div class="span2"></div>
</div>
